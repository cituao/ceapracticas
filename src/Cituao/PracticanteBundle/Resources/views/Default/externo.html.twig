{% extends 'CituaoPracticanteBundle::layout.html.twig' %}

{% block programa %}
{{ programa.nombre }}
{% endblock %}

{% block stylesheets %}
{{ parent() }}	
<style>
input[type=text]{
	border:none;
}
</style>

{% endblock %}

{% block js  %}
<script>
$( "#asesoresExternos" ).css("background-color","#000");
$( "#asesoresExternos img" ).css("opacity","0.4");
$( "#asesoresExternos h3" ).css("opacity","0.4");
</script>

{% endblock %}


{% block content  %}
{{ parent() }}
<div class = "content">
{% block upSection  %}
	<div class = "upSection">
		<h1 class="sectionTitle">Tu asesor externo</h1>
		<a href="javascript:history.back()" class = "button"><img src="{{ asset('img/regresar.png') }}"/><h4>Regresar</h4></a>
	</div>
	{% endblock  %}

	{% block downSection  %}
	<div class = "downSection"> 
		<div class="profileContainer">
			<div class="profileFormContainer" style="height:580px;">
				<form action="" method="post">
					<div class="inputContainer">
						<h2>Asesor</h2>
						<div class="input nomodificable">
						<input type="text" value = "{{ externo.getNombreCompleto }}" readonly class = "largo">
						</div>
					</div>
					<div class="inputContainer">	
						<h2>Cargo</h2>
						<div class="input nomodificable">
						<input type="text" value = "{{ externo.cargo }}" readonly>
						</div>
					</div>

					<div class="inputContainer">	
						<h2>Teléfono movil</h2>
						<div class="input nomodificable">
						<input type="text" value = "{{ externo.telefonoMovil }}" readonly>
						</div>
					</div>

					<div class="inputContainer">	
						<h2>Teléfono fijo</h2>
						<div class="input nomodificable">
						<input type="text" value = "{{ externo.telefonoFijo }}" readonly>
						</div>
					</div>

					<div class="inputContainer">	
						<h2>Email</h2>
						<div class="input nomodificable">
						<input type="text" value = "{{ externo.email }}" readonly>
						</div>
					</div>

					

				</form>
				</div><!-- profileFormContainer -->	
			</div><!-- profileContainer -->
			</div><!-- downSection -->
			{% endblock %}
			</div><!-- content -->
		{% endblock %}
