{% extends 'CituaoCoordBundle::layout.html.twig' %}

{% block programa %}
{{ programa.nombre }}
{% endblock %}

{% block js  %}
<script>
$( "#centroPractica" ).css("background-color","#000");
$( "#centroPractica img" ).css("opacity","0.4");
$( "#centroPractica h3" ).css("opacity","0.4");
</script>

{% endblock %}

{% block content  %}
	{{ parent() }}
	<div class="content">
			{% block upSection  %}
				<div class="upSection">
				<h1 class ="sectionTitle">Mis Centros de práctica</h1>
					<a  class = "button" href="{{ path('cituao_coord_registrarcentro') }}" class = "baropcion"><img src="{{ asset('img/nuevoCentro.png') }}"/><h4>Nuevo centro</h4></a>
				</div>
			{% endblock  %}

			{% block downSection  %}
				<div class="downSection">
					{% if msgerr.id == '1' %}
						<div id = "error">{{ msgerr.descripcion }} </div>		
					{% else %}
						<table class="generalTableHead">
							<tbody>
								<tr class="tableHead">
									<th width="5%"></th>
									<th width="12%"></th>
									<th width="12%"></th>
									<th width="18%"></th>
									<th width="7%">
										<img src="{{ asset('img/telefono.png') }}"/>
									</th>
									<th width="7%">
										<h3><span>Extensión</span></h3>
									</th>
									
									<th width="16%"><img style="margin-left:30px;" src="{{ asset('img/mailLabel.png') }}"/></th>
									<th><img style="margin-left:50px;" src="{{ asset('img/web.png') }}"/></th>
									<th></th>
									<th></th>
								</tr> <!--tablehead -->
							</tbody>
						</table><!-- practicantes tableHead -->
						<div style="width: 100%; height: 750px; overflow: auto; position:relative; padding-bottom:30px;">
							<table class = "generalTable">
								<tbody>
									{% set id = 1 %}
									<tr class="spacer"></tr>
									{% for centro in listaCentros %}
										<tr class="tableItem">
										<td id="hoverDiv">
											<td ><h2>{{ id }}</h2></td>
											<td style=" width:20%"><span style="margin-left:20px; ">{{ centro.nombre }}</span></td>
											<td>{{ centro.direccion }}</td>
											<td>{{ centro.telefono }}</td>
											<td>{{ centro.extension }}</td>
											<td>{{ centro.email }}</td>
											<td><a href =centro.url target="_blank">{{ centro.url }}</a></td>
											<td>
												<div>
												<table class="opciones" >
													<td>
													<a href="{{ path('cituao_coord_centro', { 'codigo': centro.id}) }}"><img src="{{ asset('img/editar.png') }}" ><h3> Editar </h3></a>
													</td>
												</table> <!-- opciones -->
												</div>
											</td>
										</td>
										</tr><!-- tableitem -->
										{% set id = id + 1 %}
										<tr class="spacer"></tr>
									{% endfor %}
									<tr class="spacer"></tr>
									<tr class="spacer"></tr>
									<tr class="spacer"></tr>
									<tr class="spacer"></tr>
									<tr class="spacer"></tr>
								</tbody>
							</table>
						</div><!-- scroll div-->
					{% endif %}
				</div>  <!-- downSection -->
			{% endblock  %} 
	</div>  <!-- content -->
	
	<script>
	$( ".tableItem" ).mouseenter(function() {
			var opciones = $('.opciones', this);
			var itemPicture = $('.itemImgContainer', this);
			$(itemPicture).css("border-color","#ec1c24");

			$( opciones).animate({
				opacity: 1,
				top: "-30px",
			}, 300, function() {
			// Animation complete.
		});
		});

		$( ".tableItem" ).mouseleave(function() {
			var itemPicture = $('.itemImgContainer', this);
			var opciones = $('.opciones', this);
			$(itemPicture).css("border-color","#242021");
			$( opciones).animate({
				opacity: 0,
				top: "0px",
			}, 300, function() {
			// Animation complete.
		});
		});
	</script>
{% endblock %} 
