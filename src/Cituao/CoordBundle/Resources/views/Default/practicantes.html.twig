{% extends 'CituaoCoordBundle::layout.html.twig' %}
{% block js  %}
<script>
$( "#practicantes" ).css("background-color","#000");
$( "#practicantes img" ).css("opacity","0.4");
$( "#practicantes h3" ).css("opacity","0.4");
</script>

{% endblock %}

{% block content  %}
{{ parent() }}
<div id="content">
	{% block upSection  %}

	<div id="upSection">
		<h1 id ="sectionTitle">Practicantes</h1>


		<a href="{{ path('cituao_coord_registrar_practicante') }}" class = "button"><img src="{{ asset('img/anadirPracticantes.png') }}"/><h4>AÃ±adir Practicantes</h4></a>

		<a href="{{ path('cituao_coord_registrar_practicante') }}" class = "button"><img src="{{ asset('img/nuevoPracticante.png') }}"/><h4>Nuevo Practicante</h4></a>

	</div><!--up section -->

	{% endblock  %}

	{% if msgerr.id == '1' %}
	<div id = "error">{{ msgerr.descripcion }} </div>		
	{% else %}


		{% block downSection  %}
		<div id = "downSection">
			<table id="practicantesTable">
				<tbody>
					<tr class="tableHead">
						<th></th>
						<th ></th>
						<th width="65px"></th>
						
						

						<th width="140px"></th>

						<th width="190px"></th>
						<th ></th>
						<th><img src="{{ asset('img/codigoLabel.png') }}"/></th>
						<th ><img style="margin-left:11px;" src="{{ asset('img/idLabel.png') }}"/></th>
						
					
						<th><img style="margin-left:20px;" src="{{ asset('img/telefonoLabel.png') }}"/></th>
						<th><img style="margin-left:70px;" src="{{ asset('img/mailLabel.png') }}"/></th>
						<th></th>
						<th></th>
					</tr>

					{% set id = 1 %}
				
					{% for practicante in listaPracticantes %}
					
					
					
					
					
						<tr class="spacer"></tr>
							<tr height="20px" class="tableItem">
								
								<td id="w" >
								<td class="z" >
							<td><h2>{{ id }}</h2></td>
								<td height="20px"><div id="itemImgContainer"><img id = "foto" border="0" src="{{ asset('uploads/fotos/' ~  practicante.path) }}" alt="Pulpit rock" width="100%" /></div></td>
								<td><span>{{ practicante.apellidos }}</span></td>
								<td><span>{{ practicante.nombres }}</span></td>
								<td>{{ practicante.codigo }}</td>
								<td>{{ practicante.ci }}</td>
								<td>{{ practicante.telefonoMovil }}</td>
								
								<td>{{ practicante.emailInstitucional }} <br> {{ practicante.emailPersonal }}</td>
								
								
								<!--
								{% if practicante.estado == 1 %}
								<td><a href="{{ path('cituao_coord_cronograma_practicante', { 'id': practicante.id}) }}"><img src="{{ asset('img/cronograma.png') }}" /></a></td>
								{% else %}
								<td><img src="{{ asset('img/nocrono.png') }}" /></td>
								{% endif %}
								<td><a href="{{ path('cituao_coord_practicante', { 'codigo': practicante.codigo}) }}"><img src="{{ asset('img/ver.png') }}" /></a></td>-->
								</td>
								</td>
							

						</tr>

				
							{% set id = id + 1 %}
							{% endfor %}
				</tbody>
			</table>
		</div>
		{% endblock  %}

    {% endif %}
</div> <!-- cierra content-->



<script>
$( ".tableItem" ).mouseenter(function() {
	var w = $('#w', this);
	var itemPicture = $('#itemImgContainer', this);
 $(w).css("background-color","#ec1c24 ");
  $(itemPicture).css("border-color","#ec1c24 ");
});

$( ".tableItem" ).mouseleave(function() {
	var w = $('#w', this);
	var itemPicture = $('#itemImgContainer', this);
 $(w).css("background-color","#fff");
   $(itemPicture).css("border-color","#242021 ");
});


</script>



{% endblock %}

