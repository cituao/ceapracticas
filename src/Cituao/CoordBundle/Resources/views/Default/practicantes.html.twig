{% extends 'CituaoCoordBundle::layout.html.twig' %}
{% block js  %}
<script>
$( "#practicantes" ).css("background-color","#000");
$( "#practicantes img" ).css("opacity","0.4");
$( "#practicantes h3" ).css("opacity","0.4");
</script>

{% endblock %}

{% block content  %}
{{ parent() }}
	<div id="content">
		<h2 id = "titlee">Practicantes</h2>
		<div id = "menuop">
			<ul>
			<li><a href="{{ path('cituao_coord_registrar_practicante') }}" class = "baropcion">Nuevo</a></li>
			
			</ul>
		</div>

	{% if msgerr.id == '1' %}
		<div id = "error">{{ msgerr.descripcion }} </div>		
	{% else %}

		<div id = "subinfowrapper">
			<table id = "customers">
			<tbody>
				<tr>
					<th>#</th>
					<th>Foto</th>
					<th>Código</th>
					<th>Cédula</th>
					<th>Apellidos</th>
					<th>Nombres</th>
					<th>Email institucional</th>
					<th>Email personal</th>
					<th>Tlf</th>
					<th>Cronograma</th>
					<th>Actualizar</th>
				</tr>
		
				{% set id = 1 %}
				{% set sw = false %}
				{% for practicante in listaPracticantes %}
					{% if sw == false %}
						<tr>
						{% set sw = true %}
					{% else %}
						<tr class = "alt">
						{% set sw = false %}
					{% endif %}

						<td>{{ id }}</th>
						<td><img id = "foto" border="0" src="{{ asset('uploads/fotos/' ~  practicante.path) }}" alt="Pulpit rock" width="68" height="68"></td>
						<td>{{ practicante.codigo }}</td>
						<td>{{ practicante.ci }}</td>
						<td>{{ practicante.apellidos }}</td>
						<td>{{ practicante.nombres }}</td>
						<td>{{ practicante.emailInstitucional }}</td>
						<td>{{ practicante.emailPersonal }}</td>
						<td>{{ practicante.telefonoMovil }}</td>
						{% if practicante.estado == 1 %}
							<td><a href="{{ path('cituao_coord_cronograma_practicante', { 'id': practicante.id}) }}"><img src="{{ asset('img/cronograma.png') }}" ></a></td>
						{% else %}
							<td><img src="{{ asset('img/nocrono.png') }}" ></td>
						{% endif %}
						<td><a href="{{ path('cituao_coord_practicante', { 'codigo': practicante.codigo}) }}"><img src="{{ asset('img/ver.png') }}" ></a></td>
						
					</tr>
					{% set id = id + 1 %}
				{% endfor %}
				</tbody>
			</table>
			</div>
		</div>
	{% endif %}
	</div> <!-- cierra info wrapper-->
{% endblock %}

