{% extends 'CituaoCoordBundle::layout.html.twig' %}

{% block programa %}
{{ programa.nombre }}
{% endblock %}

{% block js  %}
<script>
$( "#practicantes" ).css("background-color","#000");
$( "#practicantes img" ).css("opacity","0.4");
$( "#practicantes h3" ).css("opacity","0.4");
</script>

{% endblock %}

{% block content  %}
<div class="content">
	{{ parent() }}
	{% block upSection  %}
	<div class = "upSection">

		<h1 class="sectionTitle">Consultando Informe de Gestión Cualicuanti # {{ datos.numges }}</h1>
		<a href="javascript:history.back()" class = "button"><img src="{{ asset('img/regresar.png') }}"/><h4>Regresar</h4></a>
	</div>
	{% endblock  %}
	{% block downSection  %}
	<div class = "downSection">
		<div class="inform">
			<form action="" method="post">


				<div class="activity">
					<div class="inputContainer">
						<h2>Actividad</h2>
						<textarea class="input nomodificable"cols="125" rows="10" readonly>{{ gestion.actividad1 }}</textarea>
					</div>

					<div class="inputContainer">
						<h2>Descripción</h2>
						<textarea class="input nomodificable" cols="125" rows="10" readonly>{{ gestion.descripcion1 }}</textarea>
					</div>

					<div class="indicadores" >
						<div class="inputContainer" >
							<h2>Indicador</h2>
							<input class="input nomodificable bold" type="text" value="{{ gestion.indicador1 }}" readonly>
						</div>

						<div class="inputContainer" >
							<h2>Porcentaje</h2>
							<input class="input nomodificable bold" type="text" value="{{ gestion.porcentaje1 }}" readonly>
						</div>

					</div><!-- indicadores -->
				</div><!-- activity -->




				<div class="activity">
					<div class="inputContainer" >
