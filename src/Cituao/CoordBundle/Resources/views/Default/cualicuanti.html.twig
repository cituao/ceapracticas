					</div>

					<div class="inputContainer" >
						<h2>Descripción</h2>
						<textarea class="input nomodificable "  cols="125" rows="10" readonly>{{ gestion.descripcion2 }}</textarea>
					</div>

					<div class="indicadores" >
						<div class="inputContainer" >
							<h2>Indicador</h2>
							<input class="input nomodificable bold"  type="text" value="{{ gestion.indicador2 }}" readonly>
						</div>


						<div class="inputContainer" >
							<h2>Porcentaje</h2>
							<input class="input nomodificable bold"  type="text" value="{{ gestion.porcentaje2 }}" readonly>
							
						</div>
					</div><!-- indicadores -->
				</div><!-- activity -->



				<div class="activity">
					<div class="inputContainer" >
						<h2 >Actividad</h2>
						<textarea class="input nomodificable" cols="125" rows="10" readonly>{{ gestion.actividad3 }}</textarea>
					</div>

					<div class="inputContainer" >
						<h2>Descripción</h2>
						<textarea class="input nomodificable" cols="125" rows="10" readonly>{{ gestion.descripcion3 }}</textarea>
					</div>

					<div class="indicadores" >

						<div class="inputContainer" >
							<h2>Indicador</h2>
							<input class="input nomodificable bold" type="text" value="{{ gestion.indicador3 }}" readonly>
						</div>


						<div class="inputContainer" >
							<h2>Porcentaje</h2>
							<input class="input nomodificable bold" type="text" value="{{ gestion.porcentaje3 }}" readonly>
