					</div>
				</div><!-- activity -->





				<div class="activity">
					<div class="inputContainer" >
						<h2 >Apreciaciones adicionales</h2>
						<textarea class="input nomodificable" cols="125" rows="10" readonly>{{ gestion.apreciacion }}</textarea>
					</div>



					<div class="inputContainer" >
						<h2>Comentarios asesor académico</h2>
						<textarea class="input nomodificable" cols="125" rows="10" readonly>{{ gestion.comentarios }}</textarea>
