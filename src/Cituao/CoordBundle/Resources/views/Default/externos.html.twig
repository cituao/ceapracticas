				<td>{{ asesor.nombres }}</td>
				<td>{{ asesor.apellidos }}</td>
				<td>{{ asesor.telefono }}</td>				

				<td><a href="{{ path('cituao_coord_asesor', { 'ci': asesor.ci}) }}"> {{ asesor.ci }} </a></td>
			</tr>
			{% set id = id + 1 %}
		{% endfor %}
		</tbody>
	</table>
	</div>
{% endblock %}

