{% extends 'CituaoCoordBundle::layout.html.twig' %}

{% block seccion %}
	<div>
	<table id = "customers">
	<tbody>
		<tr>
			<th>#</th>
			<th>pIC</th>
			<th>CEDULA</th>
			<th>NOMBRES</th>
			<th>APELLIDOS</th>
			<th>TELEFONO</th>
	
		</tr>
		
		{% set id = 1 %}
