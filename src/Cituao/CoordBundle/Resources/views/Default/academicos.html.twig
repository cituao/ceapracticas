{% extends 'CituaoCoordBundle::layout.html.twig' %}

{% block js  %}
<script>
$( "#asesoresInternos" ).css("background-color","#000");
$( "#asesoresInternos img" ).css("opacity","0.4");
$( "#asesoresInternos h3" ).css("opacity","0.4");
</script>

{% endblock %}

{% block infowrapper  %}
	<div id="infoWrapper">
		<h2 id = "titlee">Mis asesores académicos</h2>
		<div id = "menuop">
			<ul>
			<li><a href="{{ path('cituao_coord_registraracademico') }}" class = "baropcion">Nuevo</a></li>
			</ul>
		</div>

		{% if msgerr.id == '1' %}
			<div id = "error">{{ msgerr.descripcion }}</div>		
		{% else %}
			<div id = "subinfowrapper">
			
			
			<table id = "customers">
				<tbody>
				<tr>
					<th>#</th> <th>FOTO</th>	<th>CEDULA</th>	<th>NOMBRES</th> <th>APELLIDOS</th>	<th>TELEFONO</th> <th>Email</th> <th># PRACTICANTES</th><th>Acción</th>
				</tr>
		
				{% set id = 1 %}
				{% set sw = false %}
				{% for asesor in listaAcademicos %}
					{% if sw == false %}
						<tr>
						{% set sw = true %}
					{% else %}
						<tr class = "alt">
						{% set sw = false %}
					{% endif %}

						<td>{{ id }}</th>
						<td><img id = "foto" border="0" src="{{ asset('uploads/fotos/' ~  asesor.path) }}" alt="Pulpit rock" width="68" height="68"></td>
						<td>{{ asesor.ci }}</td>
						<td>{{ asesor.nombres }}</td>
						<td>{{ asesor.apellidos }}</td>
						<td>{{ asesor.telefonoMovil }}</td>				
						<td>{{ asesor.email }}</td>	
						<td>{{ asesor.practicantes.count }}</td>
						<td><a href="{{ path('cituao_coord_academico', { 'ci': asesor.ci}) }}" id = "opButton"> Ver y modificar </a></td>
					</tr>
					{% set id = id + 1 %}
				{% endfor %}
				</tbody>
			</table>
			</div>

		{% endif %}
</div>
{% endblock %}

