{% extends 'CituaoExternoBundle::layout.html.twig' %}

{% block js  %}
<script>
$( "#practicantes" ).css("background-color","#000");
$( "#practicantes img" ).css("opacity","0.4");
$( "#practicantes h3" ).css("opacity","0.4");
</script>

{% endblock %}

{% block content  %}
{{ parent() }}
<div class="content">
	{% block upSection  %}
	<div class = "upSection">
		<h1 class="sectionTitle">Consulta de asesor académico</h1>
		<a href="javascript:history.back()" class = "button"><img src="{{ asset('img/regresar.png') }}"/><h4>Regresar</h4></a>
	</div>
	{% endblock  %}

	{% block downSection  %}
	<div class = "downSection"> 
		<div class="profileContainer">
			<div class="profilePictureContainer" >
				<div class="imgContainer" style="margin: 0 auto;">
					<img class = "foto" border="0" src="{{ asset('uploads/fotos/' ~  academico.path) }}" alt="Pulpit rock" width="100%">
				</div>
			</div><!-- profile pictureContainer -->

			<div class="profileFormContainer" style="height:580px;">

			<form action="" method="post">


				<div class="inputContainer">
					<h2>Asesor:</h2>
					<div class="input">
						<input class="nomodificable" type="text" value = "{{ academico.getNombreCompleto }}" readonly class = "largo">
					</div>
				</div>
				
				<div class="inputContainer">	
					<h2>Teléfono movil:</h2>
					<div class="input">
						<input class="nomodificable"  type="text" value = "{{ academico.telefonoMovil }}" readonly>
					</div>
				</div>

				<div class="inputContainer">	
					<h2>Teléfono fijo:</h2>
					<div class="input">
						<input class="nomodificable"  type="text" value = "{{ academico.telefonoFijo }}" readonly>
					</div>
				</div>

				<div class="inputContainer">	
					<h2>Email institucional:</h2>
					<div class="input">
						<input class="nomodificable"  type="text" value = "{{ academico.emailInstitucional }}" readonly>
					</div>
				</div>

				<div class="inputContainer">	
					<h2>Email personal:</h2>
					<div class="input">
						<input class="nomodificable"  type="text" value = "{{ academico.email }}" readonly>
					</div>
				</div>

				
			</form>	
		</div><!-- profileFormContainer -->
		</div><!-- profileContainer -->
		</div><!-- downSection -->
		{% endblock  %}
	</div><!-- content -->
	{% endblock %}
