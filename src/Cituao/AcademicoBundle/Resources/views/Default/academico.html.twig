{% extends 'CituaoAcademicoBundle::layout.html.twig' %}

{% block infowrapper  %}
	<div id="infoWrapper">
		<h2 id="titlee">Mis datos</h2>

		<div id = "menuop">
			<ul>
			<li><a href="javascript:history.back()" class = "baropcion">Regresar</a></li>
			</ul>
		</div>
	<form action="{{ path('cituao_academico_actualizar', { 'ci': academico.ci }) }}" method="post" {{ form_enctype(formulario) }}>
	    <div>	{{ form_errors(formulario) }}	</div>

		<div><img id = "foto" border="0" src="{{ asset('uploads/fotos/' ~  academico.path) }}" alt="Pulpit rock" width="114" height="144"></div>
		
	    <div>
			{{ form_label(formulario.ci) }}
			{{ form_errors(formulario.ci) }}
			{{ form_widget(formulario.ci, {'attr': {'class':'mediano'}} ) }}
		</div>
	    <div>
			{{ form_label(formulario.nombres) }}
			{{ form_errors(formulario.nombres) }}
			{{ form_widget(formulario.nombres, {'attr': {'class':'mediano'}} ) }}
		</div>
	    <div>
			{{ form_label(formulario.apellidos) }}
			{{ form_errors(formulario.apellidos) }}
			{{ form_widget(formulario.apellidos, {'attr': {'class':'mediano'}} ) }}
		</div>
	    <div>
			{{ form_label(formulario.telefonoMovil) }}
			{{ form_errors(formulario.telefonoMovil) }}
			{{ form_widget(formulario.telefonoMovil, {'attr': {'class':'corto'}} ) }}
		</div>
	    <div>
			{{ form_label(formulario.telefonoFijo) }}
			{{ form_errors(formulario.telefonoFijo) }}
			{{ form_widget(formulario.telefonoFijo, {'attr': {'class':'corto'}} ) }}
		</div>
	    <div>
			{{ form_label(formulario.emailInstitucional) }}
			{{ form_errors(formulario.emailInstitucional) }}
			{{ form_widget(formulario.emailInstitucional, {'attr': {'class':'mediano'}} ) }}
	   </div>

	    <div>
			{{ form_label(formulario.email) }}
			{{ form_errors(formulario.email) }}
			{{ form_widget(formulario.email, {'attr': {'class':'mediano'}} ) }}
	   </div>
		<div>	
			{{ form_label(formulario.perfil) }}
			{{ form_errors(formulario.perfil) }}
			{{ form_widget(formulario.perfil, {'attr': {'class':'mediano'}} ) }}
		</div>
	   
	    {{ form_rest(formulario) }}
	    <input class="boton" type="submit" value="Guardar" />
	    </div>
	</form>	
	</div>
{% endblock %}
